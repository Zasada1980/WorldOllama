{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ProjectRoot": {
      "type": "string",
      "description": "Auto-detected workspace root path"
    },
    "IndexFile": {
      "type": "string",
      "description": "Relative path to index file",
      "default": "docs/project/RUNTIME_LOGS_JOURNAL_INDEX.md"
    },
    "FilePatterns": {
      "type": "array",
      "items": { "type": "string" },
      "description": "File patterns to monitor",
      "default": ["*.md"]
    },
    "ExcludePaths": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Directories to exclude",
      "default": [
        "node_modules",
        ".git",
        "venv",
        "__pycache__",
        "dist",
        "build",
        "target",
        ".vscode",
        "obj",
        "bin"
      ]
    },
    "DebounceMilliseconds": {
      "type": "integer",
      "description": "File change debounce delay",
      "default": 2000,
      "minimum": 500,
      "maximum": 10000
    },
    "EnableFileWatcher": {
      "type": "boolean",
      "description": "Enable automatic file watching",
      "default": true
    },
    "EnableGitHook": {
      "type": "boolean",
      "description": "Enable Git post-commit hook",
      "default": false
    },
    "EnableScheduledTask": {
      "type": "boolean",
      "description": "Enable daily scheduled reindex",
      "default": false
    },
    "ScheduledTaskTime": {
      "type": "string",
      "description": "Daily task execution time (HH:MM)",
      "default": "03:00",
      "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$"
    },
    "LogLevel": {
      "type": "string",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR"],
      "description": "Logging verbosity level",
      "default": "INFO"
    },
    "NotifyOnUpdate": {
      "type": "boolean",
      "description": "Show notifications after updates",
      "default": true
    }
  }
}
