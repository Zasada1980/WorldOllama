{
  "name": "mcp-shell",
  "version": "1.0.0",
  "description": "MCP Shell Server for PowerShell command execution",
  "type": "module",
  "main": "server.ts",
  "bin": {
    "mcp-shell": "./server.ts"
  },
  "scripts": {
    "start": "tsx server.ts",
    "build": "tsc",
    "e2e:failures": "npm run build && tsx e2e/test_mcp_e2e_failures.ts --quick",
    "e2e:stress": "npm run build && tsx e2e/test_concurrency_stress.ts",
    "e2e:watchdog": "npm run build && tsx e2e/test_watchdog_no_output.ts",
    "e2e:long": "npm run build && tsx e2e/test_long_commands_no_retry.ts",
    "e2e:softkill": "npm run build && tsx e2e/test_soft_kill_grace.ts"
  },
  "keywords": [
    "mcp",
    "shell",
    "powershell"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "tsx": "^4.19.0"
  }
}